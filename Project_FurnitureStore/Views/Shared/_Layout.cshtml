@using Microsoft.AspNetCore.Http;

@{
	var sessionCustomer = ViewContext.HttpContext.Session.GetString("IDCustomer");
	var soLuongSanPham = ViewContext.HttpContext.Session.GetString("SoLuongSanPham");
}


<script>
	function sendCurrentUrl() {
		var currentUrl = window.location.href;
		var link = document.getElementById("sendUrl");
		link.href = "@Url.Action("Login", "Account")?currentUrl=" + encodeURIComponent(currentUrl);
	}

</script>

<style>
	.btn {
		border: none;
		border-radius: 5px;
		padding: 12px 20px;
		font-size: 16px;
		cursor: pointer;
		background-color: #282A35;
		color: white;
		position: relative;
	}

	.ribbon {
		width: 20px;
		font-size: 11px;
		padding: 2px;
		position: absolute;
		right: 1px;
		top: -12px;
		text-align: center;
		border-radius: 25px;
		transform: rotate(1deg);
		background-color: #ff9800;
		color: white;
	}
</style>


